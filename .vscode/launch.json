{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug_nobuild",
            "type": "cppdbg",
            "request": "launch",
            "args": ["build","--tag","busybox-image","."],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb",
                "program": "${workspaceFolder}/output/main"
            },
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "lldb-mi",
                "program": "${workspaceFolder}/output/main"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "d:\\Software\\MinGw\\mingw64\\mingw64\\bin\\gdb.exe",
                "program": "${workspaceFolder}/output/main.exe"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true,
                "trace": true // 启用跟踪
            },
            "preLaunchTask": ""
            // "preLaunchTask": "build"
        },
